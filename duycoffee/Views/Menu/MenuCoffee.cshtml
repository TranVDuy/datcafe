@model IEnumerable<duycoffee.Models.SanPham>
@using duycoffee.Models;
@{
    ViewBag.Title = "MenuCoffee";
    Layout = "~/Views/LayoutCoffee/LC.cshtml";
}

<!--/header-->
<section class="w3l-about-breadcrumb">
    <div class="breadcrumb-bg breadcrumb-bg-about py-5">
        <div class="container py-lg-4 py-md-3">
            <h2 class="title">Your favourite Coffees are back</h2>
        </div>
    </div>
</section>
<!-- tabs team-->
<section class="team py-5" id="team">
    <div class="container py-lg-5 py-md-4 py-2">
        <ul class="nav nav-pills" id="pills-tab1" role="tablist">
            @{Html.RenderAction("Loai", "Menu");}
           
        </ul>
        <div class="tab-content" id="pills-tabContent1">
           
            @{ 

                int i = 1;
                foreach (var item in Model)
                {
                    string a = i.ToString();
                    string id = "pills-team" + a;
                    string aria = "pills-team" + a + "-tab";
                    <div class="tab-pane fade show active" id="@id" role="tabpanel" aria-labelledby="@aria">
                        <div class="team-grids row">
                            <div class="col-lg-6">
                            <img src="~/Content/@item.Anh1" class="img-fluid" alt="" />
                            </div>
                        <div class="col-lg-6 align-self mt-lg-0 mt-md-5 mt-4">
                        <h4>@item.TenSanPham.ToUpper()<span>@item.GiaHienThi</span></h4>
                        <p class="pt-3">
                            @item.MoTa
                        </p>
                        <a href="/Cart/giohang?ma=@item.MaSanPham&ten=@item.TenSanPham&gia=@item.Gia&anh=@item.Anh2&giaht=@item.GiaHienThi" class="btn btn-style btn-primary mt-md-5 mt-4">Add cart</a>
                        </div>
                    </div>
                    </div>
                        i++;
                }
                
            }
            </div>
        <div>
            <style>
                .MenuTrang li {
                    display: inline;
                }

                .pagination {
                    display: inline-block;
                    padding-left: 0;
                    margin: 20px 0;
                    border-radius: 4px;
                }

                .pagination > li {
                  display: inline;
                }
            </style>

            <div class="MenuTrang">

                <div class="pagination-container">
                    <ul class="pagination">
                        <li class="active">
                            @{
                                int ssp = (int)Session["sosp"];
                                int st = ssp % 10 == 0 ? ssp / 10 : ssp / 10 + 1;

                                if (st >= 2)
                                {
                                    <span style="color: #CE6D06; font-size: larger">Trang: </span>
                                }

                                if (ssp > 10)
                                {
                                    for (int t = 1; t <= st; t++)
                                    {
                                    <li><a style="font-size: larger" href="/Menu/MenuCoffee?page=@t">@t</a></li>
                                    }
                                }
                            }

                        </ul>
                    </div>
                </div>

            </div>
        </div>
        
   
</section>
<!-- tabs team-->

